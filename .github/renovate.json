{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,

  "packageRules": [
    {
      "matchManagers": ["pip_requirements"],
      "groupName": "Python dependencies",
      "schedule": ["before 5am on monday"]
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "schedule": ["before 5am on monday"]
    },
    {
      "matchManagers": ["regex"],
      "groupName": "CMake external projects",
      "schedule": ["before 5am on monday"],
      "regexManagers": [
        {
          "fileMatch": ["(^|/)CMakeLists\\.txt$"],
          "matchStrings": [
            "FetchContent_Declare\\([^\\s]+\\s+GIT_REPOSITORY\\s+(?<depName>[^\\s]+)\\s+GIT_TAG\\s+(?<currentValue>[^\\s]+)"
          ],
          "datasourceTemplate": "git-tags"
        }
      ]
    },
    {
      "matchManagers": ["regex"],
      "groupName": "Zephyr west.yml modules",
      "schedule": ["before 5am on monday"],
      "regexManagers": [
        {
          "fileMatch": ["(^|/)west\\.yml$"],
          "matchStrings": [
            "url:\\s+(?<depName>https://[^\\s]+)\\s+revision:\\s+(?<currentValue>[^\\s]+)"
          ],
          "datasourceTemplate": "git-tags"
        }
      ]
    }
  ]
}
